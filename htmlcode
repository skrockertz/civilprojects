                });
            }

            // Market Comparison Chart
            const ctx5 = document.getElementById('marketComparisonChart');
            if (ctx5) {
                new Chart(ctx5, {
                    type: 'radar',
                    data: {
                        labels: ['Growth', 'Infrastructure', 'Affordability', 'Demand', 'Risk'],
                        datasets: [{
                            label: 'Bhatinda',
