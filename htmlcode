    </div> <!-- slideshow-container -->

    <div class="navigation">
        <button class="nav-btn" onclick="changeSlide(-1)" id="prevBtn">Previous</button>
        <button class="nav-btn" onclick="changeSlide(1)" id="nextBtn">Next</button>
    </div>

    <script>
        let currentSlide = 0;
        const slides = document.querySelectorAll('.slide');
        const totalSlides = slides.length;
        document.getElementById('totalSlides').textContent = totalSlides;

        let chartsInitialized = false;

        function showSlide(n) {
            slides[currentSlide].classList.remove('active');
            currentSlide = (n + totalSlides) % totalSlides;
            slides[currentSlide].classList.add('active');
            document.getElementById('slideNumber').textContent = currentSlide + 1;

            if (!chartsInitialized && typeof initializeCharts === 'function') {
                initializeCharts();
                chartsInitialized = true;
            }
        }

        function changeSlide(n) {
            showSlide(currentSlide + n);
        }

        document.addEventListener('keydown', e => {
            if (e.key === 'ArrowLeft') changeSlide(-1);
            if (e.key === 'ArrowRight') changeSlide(1);
        });

        // --------- Chart creation -----------------
        function initializeCharts() {
            // Property Trends Chart
            const ctx1 = document.getElementById('propertyTrendsChart');
            if (ctx1) {
                new Chart(ctx1, {
                    type: 'line',
                    data: {
                        labels: ['2001', '2004', '2007', '2010', '2013', '2016', '2019', '2022', '2024'],
                        datasets: [{
                            label: 'Property Cost (₹ Lakh)',
                            data: [10.78, 13.2, 16.8, 22.5, 32.1, 45.8, 58.3, 72.4, 82.7],
                            borderColor: '#3498db',
                            backgroundColor: 'rgba(52,152,219,0.1)',
                            borderWidth: 3,
                            fill: true,
                            tension: 0.4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            title: { display: true, text: 'Property Price Trends (2001-2024)' }
                        },
                        scales: { y: { beginAtZero: true } }
                    }
                });
            }

            // Land Cost Chart
            const ctx2 = document.getElementById('landCostChart');
            if (ctx2) {
                new Chart(ctx2, {
                    type: 'bar',
                    data: {
                        labels: ['2001', '2008', '2015', '2024'],
                        datasets: [{
                            label: 'Land Cost (₹ per sq yard)',
