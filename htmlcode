                });
            }

            // Affordability Chart
            const ctx4 = document.getElementById('affordabilityChart');
            if (ctx4) {
                new Chart(ctx4, {
                    type: 'line',
                    data: {
                        labels: ['2001', '2007', '2013', '2019', '2024'],
                        datasets: [{
                            label: 'Cost of Living Index',
                            data: [100, 125, 148, 176, 291],
